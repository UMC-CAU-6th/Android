<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/item_locker_album_img_cv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="8dp"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/item_locker_album_img_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_album_exp10"
                    android:scaleType="fitCenter"

                    />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/item_locker_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODERN TIMES"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/item_locker_album_img_cv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/item_locker_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/item_locker_album_title_tv"
            app:layout_constraintTop_toBottomOf="@id/item_locker_album_title_tv"
            

            />
        <ImageView
            android:id="@+id/item_locker_album_play_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_player_play"
            app:layout_constraintEnd_toStartOf="@id/item_locker_album_more_img_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <ImageView
            android:id="@+id/item_locker_album_more_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_player_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <ImageView
            android:id="@+id/item_locker_album_like_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_my_like_on"
            app:layout_constraintEnd_toStartOf="@id/item_locker_album_play_img_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>